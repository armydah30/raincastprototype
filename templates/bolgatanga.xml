{% extends "base.xml" %}

{% block content %}

<form id="credits">
     <block>
       <prompt>
            <audio src="static/credit.wav"/>
       </prompt>
         <goto next="#weathermenu"/>
     </block>
</form>

<menu id="weathermenu" dtmf="true">
   <prompt>
     <audio src="static/transcript.wav"/>
    </prompt>
    <choice next="#currentweather"/>
    <choice next="#daysforecast"/>
</menu>

<form id="currentweather" >
     <block>
       <prompt>
            <audio src="static/{{context.city_weather.id}}.wav"/>
            <audio src="static/currenttemp.wav"/>
            <audio src="static/{{context.city_weather.fdigit}}.wav"/>
            <audio src="static/{{context.city_weather.sdigit}}.wav"/>
            <audio src="static/degreecelsius.wav"/>
       </prompt>
   <goto next="#more"/>
     </block>
</form>

<menu id="daysforecast" dtmf="true">
   <prompt>
     <audio src="static/myforecasts.wav"/>
    </prompt>
    <choice next="#nextday"/>
    <choice next="#daytwo"/>
    <choice next="#daythree"/>
    <choice next="#dayfour"/>
    <choice next="#dayfive"/>
    <choice next="#allforecasts"/>
</menu>

<form id="nextday">
     <block>
       <prompt>
            <audio src="static/my1.wav"/>
       </prompt>
   <goto next="#more"/>
     </block>
</form>

<form id="daytwo">
     <block>
       <prompt>
            <audio src="static/my2.wav"/>
       </prompt>
   <goto next="#more"/>
     </block>
</form>

<form id="daythree">
     <block>
       <prompt>
            <audio src="static/my3.wav"/>
       </prompt>
   <goto next="#more"/>
     </block>
</form>

<form id="dayfour">
     <block>
       <prompt>
            <audio src="static/my4.wav"/>
       </prompt>
   <goto next="#more"/>
     </block>
</form>

<form id="dayfive">
     <block>
       <prompt>
            <audio src="static/my5.wav"/>
       </prompt>
   <goto next="#more"/>
     </block>
</form>

<form id="allforecasts">
     <block>
       <prompt>
            <audio src="static/my6.wav"/>
       </prompt>
   <goto next="#more"/>
     </block>
</form>

<menu id="more" dtmf="true">

   <prompt><audio src="static/more.wav"/> </prompt>
    <choice next="#weathermenu"/>
    <choice next="#goodbye"/>
</menu>

<form id="goodbye">
     <block>
       <prompt>
            <audio src="static/goodbye.wav"/>
       </prompt>
     </block>
</form>

 <nomatch>
        <audio src="static/nomatch.wav"/>
   <reprompt/>
 </nomatch>

 <noinput>
        <audio src="static/noinput.wav"/>
   <reprompt/>
 </noinput>

{% endblock %}
